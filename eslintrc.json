{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": 2,
    "eqeqeq": "warn",
    "quotes": ["warn", "double"]
  },
  "eslint.options": {
    "ignorePattern": ["webpack.config.js", "tsconfig.json"]
  }
}
